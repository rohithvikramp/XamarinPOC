<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="ToDoPOC.AddNote">
    <ContentPage.Content>
        <StackLayout Margin="20,200,20,0">
            <Label Text="Add new note" FontSize="Large" FontAttributes="Bold" Margin ="0,0,0,50" HorizontalOptions="Center"></Label>
            <StackLayout Orientation="Horizontal">
                <Label Text="Name" FontSize="Large" VerticalOptions ="Center" Margin="0,0,20,0"/>
                <Entry x:Name="nameEntry" HorizontalOptions="FillAndExpand"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal" Margin="0,10,0,30">
                <Label Text="Notes" FontSize="Large" VerticalOptions="Center" Margin="0,0,20,0"/>
                <Entry x:Name="notesEntry" HorizontalOptions="FillAndExpand"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Button x:Name="doneButton" Text="Done" FontSize="Large" HorizontalOptions="FillAndExpand" Clicked="onDoneBtnClick"/>
                <Button x:Name="cancelButton" Text="Cancel" FontSize="Large" HorizontalOptions="FillAndExpand" Clicked="onCancelBtnClick"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
